<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="wwe.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="wwe.Perspective"
            id="WWE.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="wwe.ToolbarView"
            id="WWE.toolbarView"
            name="ToolbarView">
      </view>
      <view
            allowMultiple="false"
            class="wwe.WireworldView"
            id="WWE.wireworldView"
            name="WireworldView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="WWE.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="WWE.NewCmd"
                  label="New"
                  style="push">
            </command>
            <separator
                  name="WWE.seperator1"
                  visible="true">
            </separator>
            <command
                  commandId="WWE.LoadCmd"
                  label="Load"
                  style="push">
            </command>
            <command
                  commandId="WWE.SaveCmd"
                  label="Save"
                  style="push">
            </command>
            <separator
                  name="WWE.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="WWE.toolbar">
            <command
                  commandId="WWE.RevertCmd"
                  icon="icons/refresh.gif"
                  label="Revert"
                  style="push"
                  tooltip="Revert simulation">
            </command>
            <command
                  commandId="WWE.PlayCmd"
                  icon="icons/play.gif"
                  label="Play"
                  style="push"
                  tooltip="Play">
            </command>
            <command
                  commandId="WWE.PauseCmd"
                  icon="icons/pause.gif"
                  label="Pause"
                  style="push"
                  tooltip="Pause">
            </command>
            <command
                  commandId="WWE.StepBackCmd"
                  icon="icons/backward.gif"
                  label="Step back"
                  style="push"
                  tooltip="Step back">
            </command>
            <command
                  commandId="WWE.NextStepCmd"
                  icon="icons/forward.gif"
                  label="Next step"
                  style="push"
                  tooltip="Next step">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="wwe.handler.PlayHandler"
            commandId="WWE.PlayHandler">
      </handler>
      <handler
            class="wwe.handler.PauseHandler"
            commandId="WWE.PauseHandler">
      </handler>
      <handler
            class="wwe.handler.NextStepHandler"
            commandId="WWE.NextStepHandler">
      </handler>
      <handler
            class="wwe.handler.StepBackHandler"
            commandId="WWE.StepBackHandler">
      </handler>
      <handler
            class="wwe.handler.RevertHandler"
            commandId="WWE.RevertHandler">
      </handler>
      <handler
            class="wwe.handler.NewHandler"
            commandId="WWE.NewHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="wwe.handler.PlayHandler"
            id="WWE.PlayCmd"
            name="Play Command">
      </command>
      <command
            defaultHandler="wwe.handler.PauseHandler"
            id="WWE.PauseCmd"
            name="Pause Command">
      </command>
      <command
            defaultHandler="wwe.handler.RevertHandler"
            id="WWE.RevertCmd"
            name="Revert Command">
      </command>
      <command
            defaultHandler="wwe.handler.StepBackHandler"
            id="WWE.StepBackCmd"
            name="Step Back Command">
      </command>
      <command
            defaultHandler="wwe.handler.NextStepHandler"
            id="WWE.NextStepCmd"
            name="Next Step Command">
      </command>
      <command
            defaultHandler="wwe.handler.SaveHandler"
            id="WWE.SaveCmd"
            name="Save Command">
      </command>
      <command
            defaultHandler="wwe.handler.LoadHandler"
            id="WWE.LoadCmd"
            name="Load Command">
      </command>
      <command
            defaultHandler="wwe.handler.NewHandler"
            id="WWE.NewCmd"
            name="New Command">
      </command>
   </extension>

</plugin>
