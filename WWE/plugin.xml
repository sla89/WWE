<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="wwe.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="wwe.Perspective"
            id="WWE.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="wwe.ToolbarView"
            id="WWE.toolbarView"
            name="%view.name"
            restorable="true">
      </view>
      <view
            class="wwe.toolbar.ToolbarTreeView"
            id="WWE.toolbar.toolbarTreeView"
            name="Toolbar"
            restorable="true">
      </view>
      <view
            class="wwe.ToolbarView"
            id="WWE.toolbarView"
            name="Toolbar Normal"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="WWE.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="%menu.label">
            <command
                  commandId="WWE.NewCmd"
                  label="%command.label"
                  style="push">
            </command>
            <separator
                  name="WWE.seperator1"
                  visible="true">
            </separator>
            <command
                  commandId="WWE.LoadCmd"
                  label="%command.label.0"
                  style="push">
            </command>
            <command
                  commandId="WWE.SaveCmd"
                  label="%command.label.1"
                  style="push">
            </command>
            <menu
                  label="%menu.label.0">
               <command
                     commandId="WWE.saveAsToolCmd"
                     label="%command.label.2"
                     style="push">
               </command>
               <command
                     commandId="WWE.saveAsImageCmd"
                     label="%command.label.3"
                     style="push">
               </command>
            </menu>
            <separator
                  name="WWE.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="%command.label.4">
            </command>
         </menu>
         <menu
               label="%menu.label.1">
            <command
                  commandId="WWE.scopeProperties"
                  label="%command.label.5"
                  style="push">
            </command>
            <command
                  commandId="WWE.preferences"
                  label="%command.label.6"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="WWE.toolbar">
            <command
                  commandId="WWE.RevertCmd"
                  icon="icons/refresh.gif"
                  label="%command.label.7"
                  style="push"
                  tooltip="%command.tooltip">
            </command>
            <command
                  commandId="WWE.PlayCmd"
                  icon="icons/play.gif"
                  label="%command.label.8"
                  style="push"
                  tooltip="%command.tooltip.0">
            </command>
            <command
                  commandId="WWE.PauseCmd"
                  icon="icons/pause.gif"
                  label="%command.label.9"
                  style="push"
                  tooltip="%command.tooltip.1">
            </command>
            <command
                  commandId="WWE.StepBackCmd"
                  icon="icons/backward.gif"
                  label="%command.label.10"
                  style="push"
                  tooltip="%command.tooltip.2">
            </command>
            <command
                  commandId="WWE.NextStepCmd"
                  icon="icons/forward.gif"
                  label="%command.label.11"
                  style="push"
                  tooltip="%command.tooltip.3">
            </command>
            <separator
                  name="WWE.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="WWE.ClearCmd"
                  icon="icons/trash_box.gif"
                  label="%command.label.12"
                  style="push"
                  tooltip="%command.tooltip.4">
            </command>
            <command
                  commandId="WWE.ZoomInCmd"
                  icon="icons/plus.gif"
                  label="%command.label.13"
                  style="push"
                  tooltip="%command.tooltip.5">
            </command>
            <command
                  commandId="WWE.ZoomOutCmd"
                  icon="icons/minus.gif"
                  label="%command.label.14"
                  style="push"
                  tooltip="%command.tooltip.6">
            </command>
            <command
                  commandId="WWE.RepaintCmd"
                  icon="icons/pencil_edit.gif"
                  label="%command.label.15"
                  style="push"
                  tooltip="%command.tooltip.7">
            </command>
            <separator
                  name="WWE.separator2"
                  visible="true">
            </separator>
            <control
                  class="wwe.handler.scope.Speedometer">
            </control>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="wwe.handler.scope.PlayHandler"
            commandId="WWE.PlayHandler">
      </handler>
      <handler
            class="wwe.handler.scope.PauseHandler"
            commandId="WWE.PauseHandler">
      </handler>
      <handler
            class="wwe.handler.scope.NextStepHandler"
            commandId="WWE.NextStepHandler">
      </handler>
      <handler
            class="wwe.handler.scope.StepBackHandler"
            commandId="WWE.StepBackHandler">
      </handler>
      <handler
            class="wwe.handler.scope.RevertHandler"
            commandId="WWE.RevertHandler">
      </handler>
      <handler
            class="wwe.handler.file.NewHandler"
            commandId="WWE.NewHandler">
      </handler>
      <handler
            class="wwe.handler.advanced.PreferencesHandler"
            commandId="WWE.preferences">
      </handler>
      <handler
            class="wwe.handler.file.SaveAsToolHandler"
            commandId="WWE.saveAsToolCmd">
      </handler>
      <handler
            class="wwe.handler.file.SaveAsImageHandler"
            commandId="WWE.saveAsImageCmd">
      </handler>
      <handler
            class="wwe.handler.advanced.ScopePropertiesHandler"
            commandId="WWE.scopeProperties">
      </handler>
      <handler
            class="wwe.handler.scope.ClearHandler"
            commandId="WWE.ClearHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="wwe.handler.scope.PlayHandler"
            id="WWE.PlayCmd"
            name="%command.name">
      </command>
      <command
            defaultHandler="wwe.handler.scope.PauseHandler"
            id="WWE.PauseCmd"
            name="%command.name.0">
      </command>
      <command
            defaultHandler="wwe.handler.scope.RevertHandler"
            id="WWE.RevertCmd"
            name="%command.name.1">
      </command>
      <command
            defaultHandler="wwe.handler.scope.StepBackHandler"
            id="WWE.StepBackCmd"
            name="%command.name.2">
      </command>
      <command
            defaultHandler="wwe.handler.scope.NextStepHandler"
            id="WWE.NextStepCmd"
            name="%command.name.3">
      </command>
      <command
            defaultHandler="wwe.handler.file.SaveHandler"
            id="WWE.SaveCmd"
            name="%command.name.4">
      </command>
      <command
            defaultHandler="wwe.handler.file.LoadHandler"
            id="WWE.LoadCmd"
            name="%command.name.5">
      </command>
      <command
            defaultHandler="wwe.handler.file.NewHandler"
            id="WWE.NewCmd"
            name="%command.name.6">
      </command>
      <command
            defaultHandler="wwe.handler.scope.ClearHandler"
            id="WWE.ClearCmd"
            name="%command.name.7">
      </command>
      <command
            defaultHandler="wwe.handler.scope.ZoomInHandler"
            id="WWE.ZoomInCmd"
            name="Zoom In Command">
      </command>
      <command
            defaultHandler="wwe.handler.scope.ZoomOutHandler"
            id="WWE.ZoomOutCmd"
            name="Zoom Out Command">
      </command>
      <command
            defaultHandler="wwe.handler.scope.RepaintHandler"
            id="WWE.RepaintCmd"
            name="Repaint Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="wwe.scope.ScopeEditor"
            default="false"
            id="WWE.scope.ScopeEditor"
            name="%editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="wwe.preferences.ToolbarPreferencePage"
            id="WWE.preferences.toolbar"
            name="%page.name">
      </page>
      <page
            class="wwe.preferences.ScopePreferencePage"
            id="WWE.preferences.scope"
            name="%page.name.0">
      </page>
      <page
            class="wwe.preferences.WireWorldPreferencePage"
            id="WWE.preferences.scope.wireworld"
            name="WireWorld">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="wwe.preferences.ToolboxInitializer">
      </initializer>
      <initializer
            class="wwe.preferences.ScopeInitializer">
      </initializer>
      <initializer
            class="wwe.preferences.WireWorldInitializer">
      </initializer>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="WWE.application"
            name="WireWorld Eclipse">
         <property
               name="appName"
               value="WireWorld Eclipse">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>

</plugin>
